/* pages/login/login.wxss */
.title{
  font-size: 40rpx;
  margin-top: 100rpx;
}
.gray_border{
  width: 80%;
  height: 70rpx;
  flex-direction: row;
   border: 3rpx solid whitesmoke;
  border-radius: 5rpx;
  display: flex;
  padding: 10rpx;
  margin-top: 30rpx;
  align-items: center;
}
.gray_border:active{
  border-color: #ccc;
}
.input{
  padding-left: 30rpx;
  height: 100%;
  font-size: 30rpx;
}
.input-code{
  width: 60%;
   padding-left: 30rpx;
  height: 100%;
  font-size: 30rpx;
  color: #333;
}
.code{
  position: absolute;
  right: 10%;
  height: 60rpx;
  padding-top: 15rpx;
font-size: 30rpx;
margin-left: 20rpx;
  color: #333;
}
.button-login {
  width: 80%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #007cc2;
  color: white;
  margin-top: 50rpx;
   opacity:0.4;
filter:Alpha(opacity=40);
}
.ok{
    width: 80%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #007cc2;
  color: white;
  margin-top: 50rpx;
  opacity:1;
filter:Alpha(opacity=100);
}
.hint{
  font-size: 30rpx;
  margin-top: 30rpx;
  color: gray;
  letter-spacing: 3rpx;
}